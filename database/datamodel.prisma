type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  bio: String
  avatar: String
  followingTags: [Tag!]
  news: [News!] @relation(link: TABLE, name: "AuthorNews")
  favoriteNews: [News!] @relation(link: TABLE, name: "UserFavorites")
}

type Tag {
  id: ID! @unique
  title: String! @unique
  description: String!
  followers: [User!]
  news: [News!]
}

type News {
  id: ID! @unique
  title: String!
  cover: String!
  description: String!
  content: String!
  author: User! @relation(link: TABLE, name: "AuthorNews")
  likes: [User!] @relation(link: TABLE, name: "UserFavorites")
  relatedTags: [Tag!]
}